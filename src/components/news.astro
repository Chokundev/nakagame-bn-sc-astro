---
const {topics = "", title = "หัวข้อประชาสัมพันธ์", content = "เนื้อหาข่าวประชาสัมพันธ์", date = "", author = "" } = Astro.props;
---

<div class="news-card">
  <div class="topics-tag">{topics}</div>
  <h2 class="news-title">{title}</h2>
  <p class="news-content">{content}</p>
  <div class="news-footer">
    <h6>โพสต์โดย : {author}</h6>
    <h6>วันที่โพสต์ : {date}</h6>
  </div>
</div>



<style>
  .news-card {
    background-color: white;
    border-radius: 0.75rem;
    padding: 1.5rem;
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
  }

  .topics-tag {
    background-color: #0051ff;
    color: white;
    border-radius: 1rem;
    padding: 0.25rem 1rem;
    display: inline-block;
    font-size: 0.875rem;
    margin-bottom: 1rem;
  }

  .news-title {
    font-size: 1.5rem;
    font-weight: bold;
    color: #000;
    margin-bottom: 0.5rem;
  }

  .news-content {
    font-size: 1rem;
    color: #333;
    margin-bottom: 1.5rem;
  }

  .news-footer {
    font-size: 0.875rem;
    color: #666;
    /* display: flex; */
    justify-content: space-between;
  }
</style>
