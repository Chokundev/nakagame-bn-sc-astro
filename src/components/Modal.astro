<!-- Modal -->
<div id="modal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50 hidden">
    <div class="bg-white rounded-lg shadow-lg p-5 w-11/12 max-w-md">
      <!-- เนื้อหา Modal -->
      <img 
        src="https://cdn.bn-sc.cloud/images/modal.jpg" 
        alt="Modal Content" 
        class="w-full rounded-md"
      />
      <center>
        <button 
            id="closeModal" 
            class="mt-3 bg-blue-800 text-white px-4 py-2 rounded hover:bg-blue-900">
            ปิดหน้าต่าง
        </button>
    </center>
    </div>
  </div>
  

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // แสดง Modal เมื่อโหลดหน้า
      const modal = document.getElementById('modal');
      const closeModalButton = document.getElementById('closeModal');
  
      // แสดง Modal
      modal.classList.remove('hidden');
  
      // ปิด Modal เมื่อคลิกปุ่ม
      closeModalButton.addEventListener('click', () => {
        modal.classList.add('hidden');
      });
    });
  </script>
  

  
